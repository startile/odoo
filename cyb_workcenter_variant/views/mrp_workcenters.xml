<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="mrp_workcenter_view_add_wizard" model="ir.ui.view">
        <field name="name">mrp_workcenter_view_add_wizard</field>
        <field name="model">mrp.workcenter</field>
        <field name="inherit_id" ref="mrp.mrp_workcenter_view"/>
        <field name="arch" type="xml">

            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_check_variants_in_product_template" type="object"
                            string="Check Variant's Different" class="oe_highlight"/>
                </header>
            </xpath>

            <xpath expr="//page[@name='capacity']" position="after">
                <page string="Missing Product Variants" name="capacity">
                    <field name="missing_variant_ids">
                        <tree create="false">
                            <field name="workcenter_id" column_invisible="1"/>
                            <field name="product_id"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
