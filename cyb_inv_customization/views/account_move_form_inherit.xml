<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_move_form_inherit" model="ir.ui.view">
        <field name="name">View Move Form Inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//page[@name='other_info']" position="before">
                <page id="images" string="Images" name="images">

                    <field name="references_images_ids">
                        <tree editable="bottom">
                            <field name="move_id" invisible="1"/>
                            <field name="image_name" invisible="1"/>
                            <field name="image" filename="image_name" widget="image" options="{'size': [0, 300]}"/>
                        </tree>
                    </field>
                </page>
            </xpath>

            <xpath expr="//button[@name='button_draft']" position="after">
                <button name="action_invoice_sent" type="object" string="SUBMIT SAMPLE ORDER" context="{'image_mode':True}" class="btn btn-primary"/>
            </xpath>

        </field>
    </record>

</odoo>